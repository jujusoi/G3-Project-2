<div class="d-flex justify-content-center">
    <div class="w-50">

        <!-- user account -->
        <div id="ranking" class="mt-5 mb-5 p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex flex-row">
                    <p class="fw-bold">{{userInfo.username}}</p>
                    <p class="ms-3"><span>created on </span>{{userDate}}</p>
                </div>
                <div>
                    <button data-bs-toggle="modal" data-bs-target="#exampleModalCenter" type="button" id="editBtn" class="btn btnB px-3 ms-2"><span class="pe-2">✎</span> Edit
                        Username</button>
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content" style="background-color: #AB9080; color: white;">
                      <div class="modal-header mt-3" style="border-bottom: 0px;">               
        <h5 class="modal-title m-auto" id="exampleModalCenterTitle">Enter new username</h5>
                      </div>
                      <div class="modal-body">
                        <form id="editUsernameForm" class="px-5">
                            <input type="text" id="newUsername" class="form-control" placeholder="New username here"
                            required>
                            <div class="modal-footer mt-3" style="border-top: 0px;">
                        <button type="submit" class="m-auto btn btnA px-3">Save Changes</button>
                            </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                    <!-- Edit Username Form HIDDEN BY DEFAULT UNTIL EDIT CLICK -->
                    <button type="button" id="dltBtn" class="btn dltBtn px-3 ms-2"><span class="pe-2">✖</span> Delete
                        Account</button>
                </div>
            </div>
        </div>

        <div id="ranking">

            <!-- bookmark list -->
            <div>
                <h3 class="fw-bold py-3 ms-3 d-flex align-middle">Bookmarks
                    <img src="/assets/bookmark-symbol.svg" alt="bookmark symbol" height="25px">
                </h3>
            </div>

            <div class="w-100" id="book-table-ting">
                <table class="table table-striped table-hover text-center align-middle">
                    <tbody>
                        <thead class="py-2">
                            <!-- table row titles -->
                            <tr>
                                <th scope="col" class="col-1"></th>
                                <th scope="col" class="col-5">Title</th>
                                <th scope="col" class="col-1">Genre</th>
                                <th scope="col" class="col-1">Score</th>
                                <th scope="col" class="col-1">Remove</th>
                            </tr>
                        </thead>
                        
                        <!-- ranking card template -->
                        {{#each mappedWishlist as |wishlist| }}
                        <tr>
                            <td class="img-ph"><img height="100" width="80" data-bookid="{{book.id}}"
                                    src="{{book.icon}}" alt="{{book.book_title}}"></td>
                            <td class="text-start" data-bookid="{{book.id}}">{{book.book_title}}</td>
                            <td>{{book.categories.[0].category_name}}</td>
                            <td>
                                <div>
                                    {{#if book.average_score}}
                                    <span>★ {{book.average_score}}</span>
                                    {{else}}
                                    <span>Unrated</span>
                                    {{/if}}
                                </div>
                            </td>
                            <td class="cross" data-wishlist="{{book.id}}">✖</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/js/dashboard.js"></script>