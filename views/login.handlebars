<!-- login container -->
<div class="d-flex justify-content-center mt-5">
    <div id="login-container" class="w-25 rounded p-4">

        <!-- login title -->
        <div class="text-center mt-3 txt-wht">
            <h2>LOGIN</h2>
            <p class="mt-3">Welcome, your book collection awaits you!</p>
        </div>

        <!-- login form -->
        <div class="d-flex justify-content-center mt-5">
            <form id="loginSbm" class="w-75 txt-wht">

                <!-- email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" aria-describedby="emailHelp"
                        required>
                </div>

                <!-- password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                </div>

                <!-- submit login -->
                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btnA px-3">LOGIN</button>
                </div>

                <!-- redirects to sign up -->
                <p class="text-center mt-5">Don't have an account?</p>
                <div class="d-flex justify-content-center mt-3">
                    <button id="steignupBtn" type="submit" class="btn btnB px-3">SIGN UP</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>
</body>

</html>