<div id="error-messages">
    {{#if errors}}
        <div class="alert alert-danger">
            {{#each errors}}
                <p>{{this.message}}</p>
            {{/each}}
        </div>
    {{/if}}
</div>
<!-- login container -->
<div class="d-flex justify-content-center mt-5">
  <div id="login-container" class="w-25 rounded p-4">
    <!-- logo -->
    <div class="d-flex justify-content-center">
      <img src="/assets/ReadMi-logo.png" width="auto" height="38px" alt="readmi-logo">
    </div>

    <!-- login title -->
    <div class="text-center mt-5 txt-wht">
      <h3>Sign Up</h3>
      <p>Join the ReadMi forum to bookmark your favorite books!</p>
    </div>

    <!-- login form -->
    <div class="d-flex justify-content-center mt-5">
      <form action="/register" method="POST" class="w-75 txt-wht" id="registration-form">
        <!-- username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" id="username" name="username" aria-describedby="emailHelp" required>
          <div id="usernameHelp" class="form-text txt-wht">(Between 2 and 16 characters)</div>
        </div>
        <!-- email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
        </div>
        <!-- password -->
        <div class="mb-3">
<!-- password -->
<div class="mb-3">
  <label for="password" class="form-label">Password</label>
  <input type="password" class="form-control" id="password" name="password" required>
  <div id="passwordHelp" class="form-text txt-wht">(Minimum 8 characters)</div>
</div>

        </div>
        <!-- submit login -->
        <div class="d-flex justify-content-center mt-5">
          <button type="submit" class="btn btnA px-3">Create Account</button>
        </div>
      </form>
    </div>
  </div>
</div>