
    <!-- navbar -->
    <nav class="navbar py-3 d-flex justify-content-center">
        <div class="w-50 d-flex justify-content-between">
            <section>
                <!-- logo -->
                <img src="/assets/ReadMi-logo.png" width="auto" height="38px" alt="readmi-logo">
            </section>

            <section>
                <!-- buttons -->
                <button type="button" id="loginBtn" class="btn btnA px-3">MY ACCOUNT</button>
                <button type="button" id="signupBtn" class="btn btnB px-3 ms-2">LOGOUT</button>
            </section>
        </div>
    </nav>

    <!-- book section -->
    <div class="d-flex justify-content-center mt-5">
        <div class="w-50">
            <div id="ranking" class="p-5 d-flex flex-row">
                <!-- left column -->
                <div>
                    <div class="bookid-img"><img src="{{serializedData.icon}}" alt="{{serializedData.book_title}}"></div>
                    <!-- book details -->
                    <div class="mt-4">
                        <ul class="lh-lg">
                            <li><span class="fw-bold">Pages: </span>{{serializedData.page_count}}</li>
                            <li><span class="fw-bold">Published: </span>{{serializedData.publish_year}}</li>
                            <li><span class="fw-bold">Genre: </span>{{category_name}}</li>
                            <li><span class="fw-bold">Maturity: </span>{{mature}}</li>
                            <li><span class="fw-bold">Author: </span>{{author}}</li>
                        </ul>
                    </div>
                </div>
                <!-- right column -->
                <div class="col ms-5">
                    <!-- book title -->
                    <h3 class="fw-bold">{{bookData.book_title}}</h3>
                    <!-- book stats -->
                    <div class="d-flex flex-row mt-4">
                        <div class="text-center">
                            <h3>â˜…{{book_score}}</h3>
                            <p>score</p>
                        </div>
                        <div class="text-center ms-2">
                            <h3>{{vote_count}}</h3>
                            <p>votes</p>
                        </div>
                    </div>
                    <!-- book synopsis -->
                    <div class="mt-4">
                        <h3>Synopsis</h3>
                        <p class="mt-3">{{book_summary}}</p>
                    </div>
                </div>
            </div>

            <!-- adding review section -->
            <div id="ranking" class="mt-4 p-4">
                <div>
                    <!-- button to add comments -->
                    <p class="d-inline-flex gap-1">
                        <button class="btn btnA" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            + Add Review
                        </button>
                    </p>
                    <!-- collapse box -->
                    <div class="collapse mt-5" id="collapseExample">
                        <div class="">
                            <form>
                                <div>
                                    <label for="exampleInputEmail1" class="form-label">Overall Rating</label>
                                    <div id="usenameHelp" class="form-text">(Enter a rating from 1 to 5)</div>
                                    <input type="email" class="form-control mt-2" id="exampleInputEmail1"
                                        aria-describedby="emailHelp">
                                </div>
                                <div class="mt-4">
                                    <label for="exampleInputPassword1" class="form-label">Review</label>
                                    <div id="usenameHelp" class="form-text">(Add a review on the book)</div>
                                    <textarea class="form-control mt-2" aria-label="With textarea"></textarea>
                                </div>
                                <button type="submit" class="btn btnA mt-5">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- existing comments -->

            {{#each serializedData.reviews as |review|}}
            {{> review-partial}}
            {{/each}}
           
        </div>
    </div>
    <script src="/js/script.js"></script>
