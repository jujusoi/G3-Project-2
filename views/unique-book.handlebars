<!-- book section -->
<div class="d-flex justify-content-center mt-5">
    <div id="selection" class="cont-main">
        <div id="ranking" class="p-5 d-flex flex-row">
            <!-- left column -->
            <div id="changeRow">
                <div class="bookid-img d-flex justify-content-center" >
                    <img src="{{serializedData.icon}}" class="object-fit-contain" width="200px" alt="{{serializedData.book_title}}">
                </div>
                <!-- book details -->
                <div class="mt-4">
                    <ul class="lh-lg">
                        <li><span class="fw-bold">Pages: </span>{{serializedData.page_count}}</li>
                        <li><span class="fw-bold">Published: </span>{{serializedData.publish_year}}</li>
                        <li><span class="fw-bold">Genre: </span>{{serializedData.categories.[0].category_name}}</li>
                        <li><span class="fw-bold">Author: </span>{{serializedData.author}}</li>
                        {{#if serializedData.mature}}
                        <li><span class="fw-bold">Maturity: </span>18+</li>
                        {{/if}}
                    </ul>
                </div>
            </div>
            <!-- right column -->
            <div id="synopsis" class="col ms-5">
                <!-- book title -->
                <h3 id="book-title" data-bookid="{{serializedData.id}}" class="fw-bold">{{bookData.book_title}}</h3>
                <!-- book stats -->
                <div class="d-flex flex-row mt-4">
                    <div class="text-center">
                        <h3><span class="star-star">â˜…</span>{{serializedData.average_score}}</h3>
                        <p>score</p>
                    </div>
                    <div class="text-center ms-4">
                        <h3>{{numberOfReviews}}</h3>
                        <p>votes</p>
                    </div>
                </div>
                <!-- book synopsis -->
                <div class="mt-4">
                    <h3>Synopsis</h3>
                    <p class="mt-3">{{serializedData.book_description}}</p>
                </div>
            </div>
        </div>

        <!-- adding review section -->
        <div id="ranking" class="mt-4 p-4">
            <div>
                <!-- button to add comments -->
                <p class="d-inline-flex gap-1">
                    <button class="btn btnA" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
                        aria-expanded="false" aria-controls="collapseExample">
                        + Add Review
                    </button>
                </p>
                <!-- collapse box -->
                <div class="collapse mt-5" id="collapseExample">
                    <div class="">
                        <form>
                            <div>
                                <label for="rating-input" class="form-label">Overall Rating</label>
                                <div id="usenameHelp" class="form-text">(Enter a rating from 1 to 5)</div>
                                <input type="number" min="1" max="5" step="1" class="form-control mt-2"
                                    id="rating-input" aria-describedby="emailHelp">
                            </div>
                            <div class="mt-4">
                                <label for="rating-input" class="form-label">Review</label>
                                <div id="usenameHelp" class="form-text">(Add a review on the book)</div>
                                <textarea id="comment-desc" class="form-control mt-2"
                                    aria-label="With textarea"></textarea>
                            </div>
                            <button id="comment-submitBtn" type="submit" class="btn btnA mt-5">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- existing comments -->

        {{#each serializedData.reviews as |review|}}
        {{> review-partial}}
        {{/each}}

    </div>
</div>
<script src="/js/comment.js"></script>